	<delete id="deleteOrderDetail" parameterType="Integer">
		delete from orderdetail where orderbasetable_id=#{id}
	</delete>
	<delete id="deleteOrderBase" parameterType="Integer">
		delete from orderbasetable where id=#{id}
	</delete>
